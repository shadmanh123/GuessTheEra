<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GuessTheEra" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sage</item>
        <item name="colorPrimaryVariant">@color/coffee</item>
        <item name="colorOnPrimary">@color/sage</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yinmin_blue</item>
        <item name="colorSecondaryVariant">@color/yinmin_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GuessTheEra.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.GuessTheEra.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yinmin_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.GuessTheEra.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.GuessTheEra.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>