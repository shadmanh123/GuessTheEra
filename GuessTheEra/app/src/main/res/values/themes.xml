<resources xmlns:tools="http://schemas.android.com/tools">
     Base application theme.
    <style name="Theme.GuessTheEra" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yinmin_blue</item>
        <item name="colorPrimaryVariant">@color/coffee</item>
        <item name="colorOnPrimary">@color/yinmin_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/atomic_tangerine</item>
        <item name="colorSecondaryVariant">@color/atomic_tangerine</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:popupMenuStyle">@style/Theme.GuessTheEra.PopupMenuTheme</item>
    </style>

    <style name="Theme.GuessTheEra.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.GuessTheEra.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/coffee</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.GuessTheEra.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.GuessTheEra.PopupMenuTheme" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/mauve</item>
    </style>
</resources>