<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/atomic_tangerine">

    <TextView
        android:id="@+id/winsTV"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_button_coffee"
        android:gravity="center"
        android:text="@string/wins"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/emailTV"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_coffee"
        android:text="@string/user_email"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <ListView
        android:id="@+id/game_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/highScoreTV"
        android:layout_below="@+id/emailTV"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/highScoreTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button_coffee"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        />
</RelativeLayout>